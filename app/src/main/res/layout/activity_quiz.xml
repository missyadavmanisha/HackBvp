<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:text="play"
        android:textSize="30sp"
        android:background="#00e10c"
        android:onClick="startTimer"
        android:id="@+id/goButton"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:id="@+id/gameRelativeLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="30s"
            android:textSize="40sp"
            android:layout_margin="20dp"
            android:padding="10dp"
            android:background="#fff700"
            android:id="@+id/timerText"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:text="1 + 1"
            android:textSize="35sp"
            android:id="@+id/questionText"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="0/0"
            android:textSize="40sp"
            android:layout_margin="20dp"
            android:padding="10dp"
            android:background="#ffbf00"
            android:id="@+id/totalSolvedText"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="10dp"
            android:id="@+id/answerGrid">

            <Button
                android:height="120dp"
                android:id="@+id/answer1"
                android:text="0"
                android:textSize="40sp"
                android:onClick="chooseAnswer"
                android:layout_gravity="fill"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:background="#ff0000"/>

            <Button
                android:height="120dp"
                android:id="@+id/answer2"
                android:text="0"
                android:textSize="40sp"
                android:onClick="chooseAnswer"
                android:layout_gravity="fill"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:background="#00ff3c"/>

            <Button
                android:height="120dp"
                android:id="@+id/answer3"
                android:text="0"
                android:textSize="40sp"
                android:onClick="chooseAnswer"
                android:layout_gravity="fill"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:background="#ff00ea"/>

            <Button
                android:height="120dp"
                android:id="@+id/answer4"
                android:text="0"
                android:textSize="40sp"
                android:onClick="chooseAnswer"
                android:layout_gravity="fill"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:background="#00ffd4"/>

        </GridLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/answerGrid"
            android:layout_marginTop="15dp"
            android:text="Correct!"
            android:textSize="40sp"
            android:id="@+id/correctText"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="60dp"
            android:text="Play Again"
            android:id="@+id/playAgainButton"
            android:onClick="playAgain"/>

    </RelativeLayout>



</RelativeLayout>
